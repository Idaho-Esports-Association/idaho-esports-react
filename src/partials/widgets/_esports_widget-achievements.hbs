<!-- Widget: Achievements -->
<Linkside className="widget card card--no-paddings widget--sidebar widget-achievements">
	<div className="widget__title card__header card__header--has-arrows js-alc-achievements-carousel-header">
		<h4>Achievements</h4>
	</div>
	<div className="widget__content card__content">

		<div className="alc-achievements js-alc-achievements-carousel">

			{{#each esports.sp.single-player.widget-achievements}}
			<div className="alc-achievements__item">
				<div className="alc-achievements__content">
					<div className="alc-achievements__icon alc-icon alc-icon--circle alc-icon--xl alc-icon--outline alc-icon--outline-xl">
						<svg role="img" className="df-icon df-icon--{{event.icon}}">
							<use xlink:href="{{../root}}assets/images/esports/icons-esports.svg#{{event.icon}}"/>
						</svg>
					</div>
					<h5 className="alc-achievements__event-title">{{event.title}}</h5>
					<div className="alc-achievements__event-date">{{event.date}}</div>
				</div>
				<div className="alc-achievements__meta">
					{{#each meta}}
					<div className="alc-achievements__meta-item">
						<h6 className="alc-achievements__meta-value">{{value}}</h6>
						<div className="alc-achievements__meta-name">{{name}}</div>
					</div>
					{{/each}}
				</div>
			</div>
			{{/each}}

		</div>
	</div>
</Linkside>
<!-- Widget: Achievements / End -->
