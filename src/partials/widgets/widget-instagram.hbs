<!-- Widget: Instagram -->
<Linkside className="widget card widget--sidebar widget-instagram">
	<div className="widget__title card__header">
		<h4>Gallery Widget</h4>
	</div>
	<div className="widget__content card__content">
		<ul id="instagram-feed-alt" className="widget-instagram__list widget-instagram__list--4cols">
			{{#each football.sp.player.instagram}}
			<li className="widget-instagram__item">
				<Link href="{{link}}" className="widget-instagram__link-wrapper" target="_blank">
					<span className="widget-instagram__plus-sign">
						<img src="{{image}}" className="widget-instagram__img" alt="" />
					</span>
				</Link>
			</li>
			{{/each}}
		</ul>
	</div>
</Linkside>
<!-- Widget: Instagram / End -->
