<!-- Widget: Latest Results -->
<Linkside className="widget card widget--sidebar widget-results">
	<div className="widget__title card__header card__header--has-btn">
		<h4>Latest Results</h4>
		<Link href="/"  className="btn btn-default btn-xs card-header__button">See Full Results</Link>
	</div>
	<div className="widget__content card__content">
		<dl className="widget-results__dl">

			{{#each esports.sp.team.widget-results-2}}
			<dt className="widget-results__dt widget-results__dt--{{cat}}">
				{{label}}
			</dt>
			<dd className="widget-results__dd">
				<ul className="widget-results__list">
				{{#each events}}
				<!-- Game #{{@key}} -->
				<li className="widget-results__item">
					<div className="widget-results__header justify-content-between">
						<div className="widget-results__league">{{league}}</div>
						<div className="widget-results__title">{{date}}</div>
					</div>
					<div className="widget-results__content">
						<div className="widget-results__team widget-results__team--first">
							<figure className="widget-results__team-logo">
								<img src="{{../root}}assets/images/{{team1.logo}}" alt="">
							</figure>
							<div className="widget-results__team-details">
								<h5 className="widget-results__team-name">{{team1.name}}</h5>
								<span className="widget-results__team-info">{{team1.place}}</span>
							</div>
						</div>
						<div className="widget-results__result">
							<div className="widget-results__score">
								<span className="widget-results__score-{{#if team1.result.outcome.win}}winner{{else}}loser{{/if}}">{{team1.result.score}}</span> - <span className="widget-results__score-{{#if team2.result.outcome.win}}winner{{else}}loser{{/if}}">{{team2.result.score}}</span>
							</div>
						</div>
						<div className="widget-results__team widget-results__team--second">
							<figure className="widget-results__team-logo">
								<img src="{{../root}}assets/images/{{team2.logo}}" alt="">
							</figure>
							<div className="widget-results__team-details">
								<h5 className="widget-results__team-name">{{team2.name}}</h5>
								<span className="widget-results__team-info">{{team2.place}}</span>
							</div>
						</div>
					</div>
				</li>
				<!-- Game #{{@key}} / End -->
				{{/each}}
				</ul>
			</dd>
			{{/each}}

		</dl>
	</div>
</Linkside>
<!-- Widget: Latest Results / End -->
