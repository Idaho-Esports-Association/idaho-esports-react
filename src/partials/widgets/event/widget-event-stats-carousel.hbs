<!-- Widget: Event Stats Carousel -->
<Linkside className="widget card widget--sidebar widget-event-stats-carousel">
	<div className="widget__title card__header">
		<h4>Match Numbers</h4>
	</div>
	<div className="widget__content card__content widget__content--bottom-decor">
		<div className="alc-event-stats-carousel js-alc-event-stats-carousel">
			{{#each basketball.sp.event.team-stats.stats-carousel}}
			<div className="alc-event-stats-carousel__item">
				<h5 className="alc-event-stats-carousel__figure">{{value}}</h5>
				<div className="alc-event-stats-carousel__desc">
					<h6 className="alc-event-stats-carousel__title">{{title}}</h6>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</Linkside>
<!-- Widget: Event Stats Carousel / End -->
