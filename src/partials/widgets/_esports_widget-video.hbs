<!-- Video Player -->
<div className="card {{#unless padding}}card--no-paddings{{/unless}}">
	<header className="card__header card__header--has-btn">
		<h4>{{#if title}}{{title}}{{else}}Game Video Play{{/if}}</h4>
		{{#if btn}}<Link href="#" className="btn btn-default btn-xs card-header__button">Go to Channel</Link>{{/if}}
	</header>
	<div className="card__content">
		<div className="alc-embeded-player" data-id="{{id}}" data-controls="true" data-provider="{{#if provider}}{{provider}}{{else}}youtube{{/if}}" {{#if thumbnail}}data-thumbnail="{{thumbnail}}"{{/if}} data-easy-embed>
			<div className="alc-embeded-player__overlay">
				<i className="fas fa-play alc-embeded-player__icon"></i>
			</div>
		</div>
	</div>
</div>
<!-- Vide Player / End -->
