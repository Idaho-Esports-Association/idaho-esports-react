		<ul className="team-stats-box">
			<li className="team-stats__item">
				<div className="team-stats__icon">
					<svg role="img" className="df-icon df-icon--ppg">
						<use xlink:href="{{../root}}assets/images/icons-basket.svg#points-per-game"/>
