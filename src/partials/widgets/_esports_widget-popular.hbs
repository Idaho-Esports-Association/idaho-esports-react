<!-- Widget: Popular News -->
<Linkside className="widget widget--sidebar card widget-popular-posts">
	<div className="widget__title card__header">
		<h4>Featured News</h4>
	</div>
	<div className="widget__content card__content">
		<ul className="posts posts--simple-list">
			{{#each esports.posts.widget-popular }}
			<li className="posts__item {{#each category}}posts__item--{{class}} {{/each}}">
				<figure className="posts__thumb posts__thumb--hover">
					<Link href="_esports_blog-post-1.html"><img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt=""></Link>
				</figure>
				<div className="posts__inner">
					<div className="posts__cat">
						{{#each category}}<span className="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
					</div>
					<h6 className="posts__title posts__title--color-hover"><Link href="_esports_blog-post-1.html">{{title}}</Link></h6>
					<time datetime="2018-09-27" className="posts__date">{{date}}</time>
				</div>
				<div className="clearfix"></div>
				<div className="posts__excerpt">
					{{excerpt}}
				</div>
			</li>
			{{/each}}
		</ul>
	</div>
</Linkside>
<!-- Widget: Popular News / End -->
