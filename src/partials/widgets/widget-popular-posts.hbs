<!-- Widget: Popular News -->
<Linkside className="widget widget--sidebar card widget-popular-posts">
	<div className="widget__title card__header">
		<h4>Popular News</h4>
	</div>
	<div className="widget__content card__content">
		<ul className="posts posts--simple-list">

			{{#each basketball.posts.widget-popular}}
			<li className="posts__item posts__item--{{category.class}}">
				<figure className="posts__thumb">
					<Link href="#"><img src="assets/images/samples/{{thumb}}.jpg" alt=""></Link>
				</figure>
				<div className="posts__inner">
					<div className="posts__cat">
						<span className="label posts__cat-label">{{category.name}}</span>
					</div>
					<h6 className="posts__title"><Link href="#">{{title}}</Link></h6>
					<time datetime="2016-08-23" className="posts__date">{{date}}</time>
				</div>
			</li>
			{{/each}}

		</ul>
	</div>
</Linkside>
<!-- Widget: Popular News / End -->
