<header className="product-tabs__header">
	<h2>Write a Review</h2>
</header>

<!-- Reviews Form -->
<form action="#" className="reviews-form">
	<div className="row">
		<div className="col-md-4">
			<div className="form-group">
				<label className="control-label" for="review-stars">Review Stars</label>
				<select name="review-stars" id="review-stars" className="form-control">
					<option value="5">5 Stars Rating</option>
					<option value="4">4 Stars Rating</option>
					<option value="3">3 Stars Rating</option>
					<option value="2">2 Stars Rating</option>
					<option value="1">1 Star Rating</option>
				</select>
			</div>
			<div className="form-group">
				<label className="control-label" for="review-title">Review Title</label>
				<input type="text" id="review-title" name="review-title" className="form-control">
			</div>
		</div>
		<div className="col-md-8">
			<div className="form-group">
				<label className="control-label" for="textarea-review">Your Review</label>
				<textarea name="textarea-review" id="textarea-review" rows="5" className="form-control"></textarea>
			</div>
		</div>
	</div>
	<div className="form-group form-group--submit">
		<button type="submit" className="btn btn-default btn-block btn-lg">Post Your Review</button>
	</div>
</form>
<!-- Reviews Form / End -->
