---
layout: esports
page-title: Team Standings
page-heading: "Team <span className=\"highlight\">Standings</span>"
megamenu: v3

breadcrumbs: [
	{
		label: "Teams",
		link: "#"
	},
	{
		label: "L.O. Heroes",
		link: "#"
	},
	{
		label: "Standings"
	}
]
---

{{> _esports_team-filter }}

<!-- Content
================================================== -->
<div className="site-content">
	<div className="container">

		<!-- Team Standings -->
		<div className="card card--has-table">
			<div className="card__header">
				<h4>League of Heroes Standings</h4>
			</div>
			<div className="card__content">
				<div className="table-responsive">
					<table className="table table-hover table-standings table-standings--full">
						<thead>
							<tr>
								<th className="team-standings__pos">Pos</th>
								<th className="team-standings__team">Team</th>
								<th className="team-standings__win">Wins</th>
								<th className="team-standings__lose">Losses</th>
								<th className="team-standings__kills">Kills</th>
								<th className="team-standings__deaths">Deaths</th>
								<th className="team-standings__assists">Assists</th>
								<th className="team-standings__pentakills">Pentakills</th>
								<th className="team-standings__kdar">KDA.R</th>
								<th className="team-standings__dmg-percent">DMG%</th>
								<th className="team-standings__dpm">DPM</th>
								<th className="team-standings__gold-percent">Gold%</th>
								<th className="team-standings__overall-record">Overall Record</th>
								<th className="team-standings__match-record">Match Record</th>
							</tr>
						</thead>
						<tbody>
							{{#each esports.sp.team.standings}}
							<tr>
								<td className="team-standings__pos">{{pos}}</td>
								<td className="team-standings__team">
									<div className="team-meta">
										<figure className="team-meta__logo">
											<img src="{{../root}}assets/images/{{team.logo}}" alt="">
										</figure>
										<div className="team-meta__info">
											<h6 className="team-meta__name">{{team.name}}</h6>
											<span className="team-meta__place">{{team.place}}</span>
										</div>
									</div>
								</td>
								<td className="team-standings__win">{{win}}</td>
								<td className="team-standings__lose">{{lose}}</td>
								<td className="team-standings__kills">{{kills}}</td>
								<td className="team-standings__deaths">{{deaths}}</td>
								<td className="team-standings__assists">{{assists}}</td>
								<td className="team-standings__pentakills">{{pentakills}}</td>
								<td className="team-standings__kdar">{{kdar}}</td>
								<td className="team-standings__dmg">{{dmg}}</td>
								<td className="team-standings__dpm">{{dpm}}</td>
								<td className="team-standings__gold">{{gold}}</td>
								<td className="team-standings__overall highlight">{{overall}}</td>
								<td className="team-standings__match highlight">{{match}}</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<!-- Team Standings / End -->

		<!-- Team Glossary -->
		<div className="card">
			<div className="card__header">
				<h4>Terms Glossary</h4>
			</div>
			<div className="card__content">
				<div className="glossary">
					<div className="glossary__item"><span className="glossary__abbr">Kills:</span> Total Kills</div>
					<div className="glossary__item"><span className="glossary__abbr">Assists:</span> Total Assists</div>
					<div className="glossary__item"><span className="glossary__abbr">DMG%:</span> Damage Percentage</div>
					<div className="glossary__item"><span className="glossary__abbr">Gold%:</span> Gold Percentage</div>
					<div className="glossary__item"><span className="glossary__abbr">Deaths:</span> Total Deaths</div>
					<div className="glossary__item"><span className="glossary__abbr">KDA.R:</span> Kill Death Assists Ratio</div>
					<div className="glossary__item"><span className="glossary__abbr">DPM:</span> Damanager Per Minute</div>
					<div className="glossary__item"><span className="glossary__abbr">Records:</span> Regional Records</div>
				</div>
			</div>
		</div>
		<!-- Team Glossary / End -->

	</div>
</div>

<!-- Content / End -->
