				<!-- Contact Form Card -->
				<div className="card">
					<div className="card__header">
						<h4>Send Us a Message</h4>
					</div>
					<div className="card__content">

						<!-- Contact Form -->
						<form action="#" className="contact-form">
							<div className="row">
								<div className="col-12 col-sm-6">
									<div className="form-group">
										<label for="contact-form-name">Your Name <span className="required">*</span></label>
										<input type="text" name="contact-form-name" id="contact-form-name" className="form-control" placeholder="Your full name...">
									</div>
								</div>
								<div className="col-12 col-sm-6">
									<div className="form-group">
										<label for="contact-form-email">Your Email <span className="required">*</span></label>
										<input type="email" name="contact-form-email" id="contact-form-email" className="form-control" placeholder="Your email...">
									</div>
								</div>
								<div className="w-100"></div>
								<div className="col-12 col-sm-6">
									<div className="form-group">
										<label for="select-preferred-game">Subject</label>
										<select name="select-preferred-game" id="select-preferred-game" className="form-control">
											<option value="1">League of Heroes</option>
											<option value="2">Xenowatch</option>
											<option value="3">Striker Go</option>
										</select>
									</div>
								</div>
								<div className="col-12 col-sm-6">
									<div className="form-group">
										<label for="contact-form-subject">Twitch Channel</label>
										<input type="text" name="contact-form-subject" id="contact-form-subject" className="form-control">
									</div>
								</div>
							</div>

							<div className="form-group">
								<label for="contact-form-message">Your Message <span className="required">*</span></label>
								<textarea name="name" rows="5" className="form-control" placeholder="Enter your message here..."></textarea>
							</div>
							<div className="form-group form-group--submit text-right">
								<button type="submit" className="btn btn-primary-inverse">Send Your Message</button>
							</div>
						</form>
						<!-- Contact Form / End -->

					</div>
				</div>
				<!-- Contact Form Card / End -->

			</div>
			<div className="col-md-4">

