---
layout: esports
page-title: Checkout
page-heading: "Check<span className=\"highlight\">out</span>"
megamenu: v3

breadcrumbs: [
	{
		label: "Shop",
		link: "_esports_shop-fullwidth.html"
	},
	{
		label: "Checkout"
	}
]
---

<!-- Content
================================================== -->
<div className="site-content">
	<div className="container">

		<div className="alert alert-warning alert--rounded">
			<strong>Do you have an account? <Link href="_esports_shop-login.html">Click Here</Link> to login now and create a new account</strong>
		</div>

		<!-- Checkout Form -->
		<form action="#" className="df-checkout">

			<div className="row">

				<div className="col-md-8">

					<!-- Billing Details -->
					<div className="card">
						<div className="card__header">
							<h4>Billing Details</h4>
						</div>
						<div className="card__content">
							<div className="df-billing-fields">

								<div className="row">

									<div className="col-md-6">
										<div className="form-group">
											<label for="billing_first_name">First Name <Linkbbr className="required" title="required">*</Linkbbr></label>
											<input type="text" name="billing_first_name" id="billing_first_name" className="form-control" placeholder="Your first name...">
										</div>
									</div>

									<div className="col-md-6">
										<div className="form-group">
											<label for="billing_last_name">Last Name <Linkbbr className="required" title="required">*</Linkbbr></label>
											<input type="text" name="billing_last_name" id="billing_last_name" className="form-control" placeholder="Your last name...">
										</div>
									</div>

								</div>

								<div className="row">

									<div className="col-md-6">
										<div className="form-group">
											<label for="billing_email">Email <Linkbbr className="required" title="required">*</Linkbbr></label>
											<input type="email" name="billing_email" id="billing_email" className="form-control" placeholder="Your email...">
										</div>
									</div>

									<div className="col-md-6">
										<div className="form-group">
											<label for="billing_company">Company Name</label>
											<input type="text" name="billing_company" id="billing_company" className="form-control" placeholder="Your company name...">
										</div>
									</div>

								</div>

								<div className="form-group form-group--sm">
									<label for="billing_address_1">Full Address <Linkbbr className="required" title="required">*</Linkbbr></label>
									<input type="text" name="billing_address_1" id="billing_address_1" className="form-control" placeholder="Enter your street address...">
								</div>
								<div className="form-group">
									<input type="text" name="billing_address_2" id="billing_address_2" className="form-control" placeholder="Enter your apartment, floor, suite, etc...">
								</div>

								<div className="form-group">
									<label for="billing_country">Country</label>
									<select name="billing_country" id="billing_country" className="form-control">
										<option value="0">Select your country...</option>
										<option value="Canada">Canada</option>
										<option value="Italy">Italy</option>
										<option value="Spain">Spain</option>
										<option value="Greece">Greece</option>
									</select>
								</div>

								<div className="row">
									<div className="col-md-6">
										<div className="form-group">
											<label for="billing_city">Country</label>
											<select name="billing_city" id="billing_city" className="form-control">
												<option value="0">Select your state or city...</option>
												<option value="1">New York</option>
												<option value="2">Barcelona</option>
												<option value="3">Paris</option>
												<option value="4">London</option>
											</select>
										</div>
									</div>
									<div className="col-md-6">
										<div className="form-group">
											<label for="billing_postcode">Zip Code</label>
											<input type="text" name="billing_postcode" id="billing_postcode" className="form-control" placeholder="Your zip or postal code...">
										</div>
									</div>
								</div>

								<div className="form-group mb-0">
									<label for="order_comments_1">Additional Comments</label>
									<textarea name="order_comments_1" id="order_comments_1" rows="6" className="form-control" placeholder="Write any additional comments..."></textarea>
								</div>

							</div>
						</div>
					</div>
					<!-- Billing Details / End -->


					<!-- Shipping Details -->
					<div className="card">
						<div className="card__header">
							<h4>Shipping Details</h4>
						</div>
						<div className="card__content">

							<div className="form-group mb-0">
								<label for="order_comments_2">Additional Comments</label>
								<textarea name="order_comments_2" id="order_comments_2" rows="6" className="form-control" placeholder="Write any additional comments..."></textarea>
							</div>

						</div>
					</div>
					<!-- Shipping Details / End -->
				</div>

				<div className="col-md-4">

					<!-- Order -->
					<div className="card card--has-table">
						<div className="card__header">
							<h4>Your Order</h4>
						</div>
						<div className="card__content">

							<!-- Checkout Review Order -->
							<div className="df-checkout-review-order">
								<div className="table-responsive">
									<table className="df-checkout-review-order-table table">
										<thead>
											<tr>
												<th className="product-header text-center" colspan="2">Inventory Items</th>
											</tr>
										</thead>
										<tbody>
											<tr className="cart_item">
												<td className="product-name">
													Jaxxy Framed Art Print x 2
												</td>
												<td className="product-total">
													<span className="amount">
														<span className="df-Price-currencySymbol">$</span>96.00
													</span>
												</td>
											</tr>
											<tr className="cart_item">
												<td className="product-name">
													Tech Warrior Framed Art Pringt x 1
												</td>
												<td className="product-total">
													<span className="amount">
														<span className="df-Price-currencySymbol">$</span>36.30
													</span>
												</td>
											</tr>
											<tr className="cart_item">
												<td className="product-name">
													Idaho Esports White Mug x 4
												</td>
												<td className="product-total">
													<span className="amount">
														<span className="df-Price-currencySymbol">$</span>64.00
													</span>
												</td>
											</tr>
											<tr className="cart_item">
												<td className="product-name">
													Mercenaries Framed Art Print x 1
												</td>
												<td className="product-total">
													<span className="amount">
														<span className="df-Price-currencySymbol">$</span>34.30
													</span>
												</td>
											</tr>
										</tbody>
										<tfoot className="bordered">
											<tr>
												<th className="product-header text-center" colspan="2">Inventory Totals</th>
											</tr>
											<tr className="cart-subtotal">
												<th>Inventory Subtotal:</th>
												<td>
													<span className="amount">
														<span className="df-Price-currencySymbol">$</span>256.30
													</span>
												</td>
											</tr>
											<tr className="coupon">
												<th>Coupon Discount:</th>
												<td>
													<span className="amount">
														-<span className="df-Price-currencySymbol">$</span>10.00
													</span>
												</td>
											</tr>
											<tr className="shipping">
												<th>Shipping &amp; Handlings:</th>
												<td>
													<span className="amount">
														<span className="df-Price-currencySymbol">$</span>30.00
													</span>
												</td>
											</tr>
											<tr className="order-total">
												<th>Inventory Total:</th>
												<td>
													<span className="amount">
														<span className="df-Price-currencySymbol">$</span>276.30
													</span>
												</td>
											</tr>
										</tfoot>
									</table>
								</div>
							</div>
							<!-- Checkout Review Order / End -->

							<!-- Checkout Payment -->
							<div className="df-checkout-payment">
								<div id="df_payment_methods">
									<div className="df_payment_methods-header">
										<h5 className="df_payment_methods-title">Payment Methods</h5>
									</div>
									<ul className="df_payment_methods df_payment_methods--bordered">

										<li className="df_payment_method panel">
											<div id="headingOne">
												<label className="radio radio-inline" for="payment_method_basc" data-toggle="collapse" role="button" data-target="#payment_method_basc_panel" aria-expanded="true" aria-controls="headingOne">
													<input type="radio" id="payment_method_basc" name="payment_method" value="cheque" checked> Direct Bank Transfer
													<span className="radio-indicator"></span>
												</label>
											</div>
											<div id="payment_method_basc_panel" className="payment_box collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#df_payment_methods">
												<p>Make your payment directly into our bank account. Please use your Order ID as the payment reference. Your order won’t be shipped until the funds have cleared in our account.</p>
											</div>
										</li>

										<li className="df_payment_method panel">
											<div id="headingTwo">
												<label className="radio radio-inline collapsed" for="payment_method_cheque" data-toggle="collapse" role="button" data-target="#payment_method_cheque_panel" aria-expanded="false" aria-controls="headingTwo">
													<input type="radio" id="payment_method_cheque" name="payment_method" value="cheque"> Check Payments
													<span className="radio-indicator"></span>
												</label>
											</div>
											<div id="payment_method_cheque_panel" className="payment_box collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#df_payment_methods">
												<p>Please send a check to Store Name, Store Street, Store Town, Store State / County, Store Postcode.</p>
											</div>
										</li>

										<li className="df_payment_method panel">
											<div id="headingThree">
												<label className="radio radio-inline collapsed" for="payment_method_paypal" data-toggle="collapse" role="button" data-target="#payment_method_paypal_panel" aria-expanded="false" aria-controls="headingThree">
													<input type="radio" id="payment_method_paypal" name="payment_method" value="paypal"> PayPal Checkout
													<span className="radio-indicator"></span>
												</label>
											</div>
											<div id="payment_method_paypal_panel" className="payment_box collapse" role="tabpanel" aria-labelledby="headingThree" data-parent="#df_payment_methods">
												<p>Pay via PayPal; you can pay with your credit card if you don’t have a PayPal account.</p>
											</div>
										</li>

									</ul>
								</div>
								<div className="place-order">
									<input type="submit" className="btn btn-primary-inverse btn-block" name="df_checkout_place_order" id="place_order" value="Place order now!">
								</div>
							</div>
							<!-- Checkout Payment / End -->

						</div>
					</div>
					<!-- Order / End -->

				</div>
			</div>
		</form>
		<!-- Checkout Form / End -->

	</div>
</div>

<!-- Content / End -->
