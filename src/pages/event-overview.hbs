---
page-title: Event Overview
event-header: true
---

{{> _event-nav}}

<!-- Content
================================================== -->
<div className="site-content">
	<div className="container">

		<div className="row">

			<!-- Content -->
			<div className="content col-lg-8">

				<!-- Video Highlights -->
				<div className="card card--no-paddings">
					<header className="card__header">
						<h4>Video Highlights</h4>
					</header>
					<div className="card__content">
						{{> widget-event-video id="XE0fU9PCrWE" provider="youtube" thumbnail="assets/images/samples/post-img6-xlg.jpg" title="Check The Idaho Esports in action in this exclusive clip from last night" date="January 27th, 2020"}}
					</div>
				</div>
				<!-- Video Highlights / End -->

				<!-- Match Team Stats -->
				<div className="alc-event-stats-box card card--no-paddings">

					<!-- Header -->
					<header className="widget__title card__header alc-teams-legend">
						<h4 className="alc-teams-legend__title">Match Team Stats</h4>
						<div className="alc-teams-legend__info">
							<!-- Teams -->
							<div className="alc-teams-legend__teams">

								{{#each basketball.sp.event.stats.meta}}
								<!-- Team #{{@key}} -->
								<div className="alc-teams-legend__team">
									<span className="alc-teams-legend__team-color alc-teams-legend__team-color--color-{{color}}"></span>
									<img src="{{logo}}" className="alc-teams-legend__team-logo" alt="{{name}}">
								</div>
								<!-- Team #{{@key}} / End -->
								{{/each}}

							</div>
							<!-- Teams / End -->

							<Link href="event-team-stats.html" className="btn btn-default btn-outline btn-xs">Full Team Stats</Link>
						</div>
					</header>
					<!-- Header / End -->

					<!-- Team & Result -->
					<div className="alc-event-stats-box__content card__content">

						<!-- Event Statistics -->
						<div className="alc-event-stats-box__section">
							<header className="alc-event-stats-box__subheader card__subheader card__subheader--sm card__subheader--clean card__subheader--nomargins">
								<h5 className="alc-event-stats-box__subtitle">Main Statistics</h5>
							</header>
							<div className="alc-event-stats-box__section-inner alc-event-stats-box__section-inner--lg">

								<!-- Progress Stats Table -->
								<table className="progress-table progress-table--sm-space progress-table--fullwidth">
									<tbody>

										{{#each basketball.sp.event.stats.main}}
										<tr>
											<td className="progress-table__progress-label {{#if team1.highlight}}progress-table__progress-label--highlight{{/if}}">{{team1.value}}</td>
											<td className="progress-table__progress-bar progress-table__progress-bar--first">
												<div className="progress">
													<div className="progress__bar" style="width: {{team1.pct}}%;" role="progressbar" aria-valuenow="{{team1.value}}" aria-valuemin="0" aria-valuemax="100"></div>
												</div>
											</td>
											<td className="progress-table__title text-uppercase">{{label}}</td>
											<td className="progress-table__progress-bar progress-table__progress-bar--second">
												<div className="progress">
													<div className="progress__bar progress__bar--info" style="width: {{team2.pct}}%;" role="progressbar" aria-valuenow="{{team2.value}}" aria-valuemin="0" aria-valuemax="100"></div>
												</div>
											</td>
											<td className="progress-table__progress-label {{#if team2.highlight}}progress-table__progress-label--highlight{{/if}}">{{team2.value}}</td>
										</tr>
										{{/each}}

									</tbody>
								</table>
								<!-- Progress Stats Table / End -->

							</div>
						</div>
						<!-- Event Statistics / End -->

						<!-- Event Additional Stats -->
						<div className="alc-event-stats-box__section">
							<header className="alc-event-stats-box__subheader card__subheader card__subheader--sm card__subheader--clean card__subheader--nomargins">
								<h5 className="alc-event-stats-box__subtitle">Efficiency percentages</h5>
							</header>
							<div className="alc-event-stats-box__section-inner alc-event-stats-box__section-inner--lg">

								<div className="row">
									<div className="col-12 col-md-6">
										<div className="row">

											{{#each basketball.sp.event.stats.percentages.team1}}
											<div className="col-4">
												<div className="circular">
													<div className="circular__bar" data-percent="{{value}}">
														<span className="circular__percents">{{value}}<small>%</small></span>
													</div>
													<span className="circular__label circular__label--paddings">{{label}}</span>
												</div>
											</div>
											{{/each}}

										</div>
									</div>
									<div className="col-12 col-md-6">
										<div className="row">

											{{#each basketball.sp.event.stats.percentages.team2}}
											<div className="col-4 {{class}}">
												<div className="circular">
													<div className="circular__bar" data-percent="{{value}}" data-bar-color="#0cb2e2">
														<span className="circular__percents">{{value}}<small>%</small></span>
													</div>
													<span className="circular__label circular__label--paddings">{{label}}</span>
												</div>
											</div>
											{{/each}}

										</div>
									</div>
								</div>

							</div>
						</div>
						<!-- Event Additional Stats / End -->

					</div>
					<!-- Team & Result / End -->

				</div>
				<!-- Match team Stats / End -->

				<div className="row">
					<div className="col-md-6">
						<!-- Event Results -->
						{{> widget-event-results}}
						<!-- Event Results / End -->
					</div>
					<div className="col-md-6">
						<!-- Event Post -->
						<div className="posts__item posts__item--card posts__item--category-1 card">
							<figure className="posts__thumb">
								<div className="posts__cat">
									<span className="label posts__cat-label">The Team</span>
								</div>
								<Link href="/" ><img src="{{../root}}assets/images/samples/post-img25.jpg" alt=""></Link>
							</figure>
							<div className="posts__inner card__content">
								<Link href="/"  className="posts__cta"></Link>
								<time datetime="2016-08-23" className="posts__date">April 26th, 2020</time>
								<h6 className="posts__title"><Link href="/" >The Idaho Esports crushed Sharks 107-102 in last night's game</Link></h6>
								<div className="posts__excerpt">
									Lorem ipsum dolor sit amet, consectetur adipisi nel elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad mini veniam, quis nostrud en derum sum laborem.
								</div>
							</div>
							<footer className="posts__footer card__footer">
								<div className="post-author">
									<figure className="post-author__avatar">
										<img src="{{../root}}assets/images/samples/avatar-1.jpg" alt="Post Author Avatar">
									</figure>
									<div className="post-author__info">
										<h4 className="post-author__name">James Spiegel</h4>
									</div>
								</div>
								<ul className="post__meta meta">
									<li className="meta__item meta__item--views">2369</li>
									<li className="meta__item meta__item--likes"><Link href="/" ><i className="meta-like icon-heart"></i> 530</Link></li>
									<li className="meta__item meta__item--comments"><Link href="/" >18</Link></li>
								</ul>
							</footer>
						</div>
						<!-- Event Post / End -->
					</div>
				</div>

				<!-- Comments -->
				{{> post-comments}}

			</div>
			<!-- Content / End -->

			<!-- Sidebar -->
			<div className="sidebar col-lg-4">

				{{> widget-event-info}}

				{{> widget-event-leaders}}

				{{> widget-standings}}

				{{> widget-event-scheduled}}

			</div>
			<!-- Sidebar / End -->
		</div>
	</div>
</div>

<!-- Content / End -->
