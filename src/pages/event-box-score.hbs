---
page-title: Event - Box Score
event-header: true
---

{{> _event-nav}}

<!-- Content
================================================== -->
<div className="site-content">
	<div className="container">

		<div className="row">

			<!-- Content -->
			<div className="content col-lg-12">

				{{#each basketball.sp.event.box-score.teams}}
				<!-- Box Score - Team {{@key}} -->
				<div className="card card--has-table {{#if color}}card--color--{{color}}{{/if}}">
					<div className="card__header card__header--has-team-info">
						<div className="team-meta">
							<figure className="team-meta__logo">
								<img src="{{logo}}" alt="{{name}}">
							</figure>
							<div className="team-meta__info">
								<h6 className="team-meta__name">{{name}}</h6>
								<span className="team-meta__place">{{info}}</span>
							</div>
						</div>
					</div>
					<div className="card__content">
						<div className="table-responsive">
							<table className="table table-hover alc-table-stats">
								<thead>
									<tr>
										{{#each thead}}
										<th className="alc-{{class}}">{{label}}</th>
										{{/each}}
									</tr>
								</thead>
								<tbody>

									<!-- Starters -->
									{{#each players.starters}}
									<tr>
										<td className="alc-name">{{name}}</td>
										<td className="alc-position">{{position}}</td>

										{{#each stats}}
										<td>{{value}}</td>
										{{/each}}
									</tr>
									{{/each}}
									<!-- Starters / End -->

									<!-- Bench Players -->
									<tr>
										<th className="alc-subheader alc-highlight" colspan="16">Bench</th>
									</tr>
									{{#each players.bench}}
									<tr>
										<td className="alc-name">{{name}}</td>
										<td className="alc-position">{{position}}</td>

										{{#ifequal stats 'false'}}
										<td colspan="14" className="alc-dnp text-uppercase">DNP - Coach's decision</td>
										{{/ifequal}}

										{{#each stats}}
										<td>{{value}}</td>
										{{/each}}

									</tr>
									{{/each}}
									<!-- Bench Players / End -->

									<!-- Total -->
									<tr>
										<td colspan="3" className="alc-total">Team Totals</td>
										{{#each total}}
										<td className="alc-highlight">{{value}}</td>
										{{/each}}
									</tr>
									<!-- Total / End -->

								</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- Box Score - Team #{{$key}} / End -->
				{{/each}}

			</div>
			<!-- Content / End -->
		</div>
	</div>
</div>

<!-- Content / End -->
