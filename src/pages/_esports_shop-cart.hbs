---
layout: esports
page-title: Shopping Cart
page-heading: "Shopping <span className=\"highlight\">Cart</span>"
megamenu: v3

breadcrumbs: [
	{
		label: "Shop",
		link: "_esports_shop-fullwidth.html"
	},
	{
		label: "Cart"
	}
]
---

<!-- Content
================================================== -->
<div className="site-content">
	<div className="container">

		<!-- Inventory -->
		<div className="card card--no-paddings alc">
			<div className="card__header card__header--has-btn">
				<h4>Your Inventory</h4>
				<Link className="btn btn-default btn-xs card-header__button" href="#">Update Shopping Cart</Link>
			</div>
			<div className="card__content pt-0">
				<!-- Items -->
				<div className="card__subheader card__subheader--sm card__subheader--nomargins card__subheader--side">
					<h5>Your Items (4)</h5>
				</div>
				<div className="alc-inventory row">
					<div className="alc-inventory__side col-lg-4">
						<div className="card__content-inner">
							<ul className="alc-inventory__list list-unstyled">

								{{#each esports.products.cart}}
								<li className="alc-inventory__item {{#if active}}alc-inventory__item--active{{/if}}">
									<figure className="alc-inventory__item-thumb">
										<Link href="_esports_shop-product.html">
											<img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt="{{title}}">
										</Link>
									</figure>
									<div className="alc-inventory__item-badges">
										{{#if count}}
										<span className="badge badge-primary">{{count}}</span>
										{{/if}}
										<span className="badge badge-default badge-close"><i className="fas fa-times"></i></span>
									</div>
								</li>
								{{/each}}

								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>
								<li className="alc-inventory__item">
									<figure className="alc-inventory__item-thumb"></figure>
								</li>

							</ul>
						</div>
					</div>
					<div className="alc-inventory__main col-lg-8">
						<div className="card__content-inner">
							<div className="row">
								<div className="col-lg-6 alc-inventory__main-thumb">
									<img src="{{../root}}assets/images/esports/samples/cart-1-lg.jpg" alt="">
								</div>
								<div className="col-lg-6 alc-inventory__main-body">
									<div className="alc-inventory__main-header">
										<h2 className="alc-inventory__main-title">Jaxxy Framed Art Print</h2>
										<div className="alc-inventory__main-info">
											<div className="alc-inventory__main-ratings">
												<i className="fas fa-star"></i>
												<i className="fas fa-star"></i>
												<i className="fas fa-star"></i>
												<i className="fas fa-star"></i>
												<i className="fas fa-star empty"></i>
											</div>
											<div className="alc-inventory__main-price">$48.00</div>
										</div>
									</div>
									<div className="alc-inventory__main-excerpt">
										Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minimam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea modo sequat. Duis aute irure dolorem in reprehenderit in voluriatur.
									</div>
									<div className="alc-inventory__main-quantity">
										<input type="number" className="form-control product-quantity-control" step="1" value="4">
									</div>
									<div className="alc-inventory__main-meta">
										<div className="alc-inventory__main-meta-item">
											<span className="alc-inventory__main-meta-label">Frame Color:</span>
											<span className="alc-inventory__main-meta-value">Black</span>
										</div>
										<div className="alc-inventory__main-meta-item">
											<span className="alc-inventory__main-meta-label">Size:</span>
											<span className="alc-inventory__main-meta-value">36x18 inches</span>
										</div>
										<div className="alc-inventory__main-meta-item">
											<span className="alc-inventory__main-meta-label">Subtotal:</span>
											<span className="alc-inventory__main-meta-value">$96.00</span>
										</div>
									</div>
									<footer className="alc-inventory__main-footer">
										<Link href="#" className="btn btn-default btn-icon"><i className="fas fa-times"></i> Remove From Bag</Link>
									</footer>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Items / End -->

				<!-- Cart Subtotal -->
				<div className="card__subheader card__subheader--sm card__subheader--nomargins card__subheader--side card__subheader--flex">
					<h5>Inventory Subtotal:</h5>
					<h5>$256.30</h5>
				</div>
				<!-- Cart Subtotal / End -->

				<!-- Calculation -->
				<div className="card__content-inner">
					<div className="row">
						<div className="col-lg-4">
							<form action="#" className="coupon-code-form coupon-code-form--inline">
								<div className="row">
									<div className="col-md-8">
										<div className="coupon-code-form-inner">
											<input type="text" className="form-control input-sm" placeholder="Enter your Coupon Code">
										</div>
									</div>
									<div className="col-md-4">
										<button className="btn btn-sm btn-primary-inverse btn-block">Redeem Coupon</button>
									</div>
								</div>
							</form>
						</div>
						<div className="col-lg-8">
							<form action="#" className="shipping-calculation-form">
								<div className="row">
									<div className="col-md-3">
										<select name="account-country" id="account-country" className="form-control input-sm">
											<option value="0">Select your country</option>
											<option value="Canada">Canada</option>
											<option value="Italy">Italy</option>
											<option value="Spain">Spain</option>
											<option value="Greece">Greece</option>
										</select>
									</div>
									<div className="col-md-3">
										<select name="account-city" id="account-city" className="form-control input-sm">
											<option value="0">Select your city</option>
											<option value="1">New York</option>
											<option value="2">Barcelona</option>
											<option value="3">Paris</option>
											<option value="4">London</option>
										</select>
									</div>
									<div className="col-md-3">
										<input type="text" className="form-control input-sm" placeholder="Your ZIP Code...">
									</div>
									<div className="col-md-3">
										<button type="submit" className="btn btn-primary btn-sm btn-block">Calculate Shipping</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<!-- Calculation / End -->

			</div>
		</div>
		<!-- Inventory / End -->

		<!-- Cart Totals -->
		<div className="card card--has-table">
			<div className="card__header">
				<h4>Inventory Totals</h4>
			</div>
			<div className="card__content">

				<!-- Checkout Review Order -->
				<div className="df-checkout-review-order">
					<div className="table-responsive">
						<table className="df-checkout-review-order-table table">
							<tfoot>
								<tr className="cart-subtotal">
									<th>Inventory Subtotal:</th>
									<td>
										<span className="amount">
											<span className="df-Price-currencySymbol">$</span>256.30
										</span>
									</td>
								</tr>
								<tr className="coupon">
									<th>Coupon Discount:</th>
									<td>
										<span className="amount">
											-<span className="df-Price-currencySymbol">$</span>10.00
										</span>
									</td>
								</tr>
								<tr className="shipping">
									<th>Shipping &amp; Handlings</th>
									<td>
										<span className="amount">
											<span className="df-Price-currencySymbol">$</span>30.00
										</span>
									</td>
								</tr>
								<tr className="order-total">
									<th>Inventory Total:</th>
									<td>
										<span className="amount">
											<span className="df-Price-currencySymbol">$</span>276.30
										</span>
									</td>
								</tr>
							</tfoot>
						</table>
					</div>
				</div>
				<!-- Checkout Review Order / End -->

			</div>
		</div>
		<!-- Cart Totals / End -->

		<!-- Checkout Payment -->
		<div className="df-checkout-payment">
			<div className="place-order text-center">
				<input type="submit" className="btn btn-primary" name="df_checkout_place_order" id="place_order" value="Proceed to Checkout">
			</div>
		</div>
		<!-- Checkout Payment / End -->

	</div>
</div>

<!-- Content / End -->
